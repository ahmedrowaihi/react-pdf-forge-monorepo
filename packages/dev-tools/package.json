{
  "name": "@ahmedrowaihi/pdf-forge-dev-tools",
  "version": "2.0.0-canary.3",
  "description": "Development utilities for PDF Forge (hot reload, spinners, path resolution, etc.)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsdown src/index.ts src/hot-reload-change.ts src/register-spinner-autostopping.ts src/resolve-path-aliases.ts src/style-text.ts src/escape-string-for-regex.ts --format cjs,esm --dts",
    "clean": "rm -rf dist"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ahmedrowaihi/react-pdf-forge-monorepo.git",
    "directory": "packages/dev-tools"
  },
  "keywords": [
    "react",
    "pdf",
    "dev-tools",
    "utilities"
  ],
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "log-symbols": "^7.0.0",
    "ora": "^8.0.0",
    "tsconfig-paths": "4.2.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@types/node": "22.14.1",
    "tsdown": "0.15.12",
    "typescript": "5.9.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
