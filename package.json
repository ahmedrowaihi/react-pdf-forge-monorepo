{
  "name": "react-pdf-forge-monorepo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=./packages/*",
    "canary:enter": "changeset pre enter canary",
    "canary:exit": "changeset pre exit",
    "lint": "biome check",
    "lint:fix": "biome check --write .",
    "release": "turbo run build --filter=./packages/* && pnpm changeset publish",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "version": "changeset version && pnpm install --no-frozen-lockfile && pnpm lint:fix"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.3",
    "opentype.js": "1.3.4",
    "@types/opentype.js": "1.3.8",
    "@changesets/cli": "2.29.7",
    "@types/node": "22.14.1",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "happy-dom": "20.0.2",
    "pkg-pr-new": "0.0.62",
    "tsconfig": "workspace:*",
    "tsdown": "0.15.12",
    "tsx": "4.21.0",
    "turbo": "2.5.8",
    "typescript": "5.9.3",
    "vite": "6.4.1",
    "vitest": "4.0.10"
  },
  "pnpm": {
    "overrides": {
      "react": "^19",
      "react-dom": "^19",
      "@types/react": "^19",
      "@types/react-dom": "^19"
    },
    "ignoredBuiltDependencies": [
      "sharp"
    ]
  },
  "packageManager": "pnpm@10.20.0+sha512.cf9998222162dd85864d0a8102e7892e7ba4ceadebbf5a31f9c2fce48dfce317a9c53b9f6464d1ef9042cba2e02ae02a9f7c143a2b438cd93c91840f0192b9dd"
}
